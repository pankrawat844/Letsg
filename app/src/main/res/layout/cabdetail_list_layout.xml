<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_tab"
        android:layout_width="@dimen/height_100"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_100">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_car_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />


                <ImageView
                    android:id="@+id/img_fix_rate_icon"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_car_icon"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/fixed_rate"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_car_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_fix_rate_icon"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="dsdsada"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="@dimen/font_14" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/img_selected_indicator"
        android:layout_width="@dimen/height_100"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        android:visibility="invisible" />
</LinearLayout>